<Window x:Class="MStore.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MStore"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="140.804" Width="268.381">
	<Grid>
		<TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Are You sure?" VerticalAlignment="Top" Width="223" TextAlignment="Center" FontSize="22" FontWeight="Bold"/>
		<Button x:Name="YesButton" Content="Yes" HorizontalAlignment="Left" Margin="164,66,0,0" VerticalAlignment="Top" Width="75" Click="YesButton_Click"/>
		<Button x:Name="NoButton" Content="No" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="75" Click="NoButton_Click"/>

	</Grid>
</Window>
